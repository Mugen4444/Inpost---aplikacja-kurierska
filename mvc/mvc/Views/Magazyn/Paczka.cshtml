@model mvc.Models.Magazyn.PaczkaViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["title"] = "Paczka";
}

<h2>Paczka ID @Model.Paczka.Id</h2>
<a asp-action="Index">Wszystkie paczki</a>

<div class="paczka">
    <label>Nadał/-ła <span>@Model.Paczka.Nadawca!.ImieNazwisko</span></label>
    <div class="client-details">
        <label>Nr telefonu <span>@Model.Paczka.Nadawca!.NrTelefonu</span></label>
        <label>Adres zamieszkania <span>@Model.Paczka.Nadawca!.AdresZamieszkania</span></label>
    </div>

    <label>Do obioru przez <span>@Model.Paczka.Odbiorca!.ImieNazwisko</span></label>
    <div class="client-details">
        <label>Nr telefonu <span>@Model.Paczka.Odbiorca!.NrTelefonu</span></label>
        <label>Adres zamieszkania <span>@Model.Paczka.Odbiorca!.AdresZamieszkania</span></label>
    </div>

    <label>Zawartość <span>@Model.Paczka.Zawartosc</span></label>
    <label>Data dodania <span>@Model.Paczka.DataDodania</span></label>

    <form asp-controller="Magazyn" asp-action="UsunPaczke" asp-route-id=@Model.Paczka.Id method="post">
        <input type="submit" value="Usuń paczkę" />
    </form>

    <a asp-action="OdswiezPaczke" asp-route-id=@Model.Paczka.Id>Odswiez paczke</a>
</div>
